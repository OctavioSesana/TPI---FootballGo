@inject NavigationManager Nav
@inject IJSRuntime JS

<nav class="nav flex-column p-3">
    <button class="btn btn-link text-start" @onclick="IrAMisReservas">
        <span class="oi oi-list-rich me-2"></span> Mis Reservas
    </button>
</nav>

@code {
    private async Task IrAMisReservas()
    {
        var clienteJson = await JS.InvokeAsync<string>("localStorage.getItem", "clienteEmail");
        if (string.IsNullOrEmpty(clienteJson))
            Nav.NavigateTo("/login");
        else
            Nav.NavigateTo("/mis-reservas");
    }
}
