@inherits LayoutComponentBase

<div class="app-shell">
    <aside class="app-sidebar">
        <NavMenu />
    </aside>

    <main class="app-content">
        <div class="container-fluid py-3">
            @Body
        </div>
    </main>
</div>

<style>
    /* Contenedor general */
    .app-shell {
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar */
    .app-sidebar {
        width: 240px;
        min-height: 100vh;
        position: sticky;
        top: 0;
        align-self: flex-start;
        background: #0b1e4d; /* mismo tono que venías usando */
        color: #fff;
        box-shadow: 0 0 16px rgba(0,0,0,.15);
        z-index: 10;
    }

    /* Área de contenido */
    .app-content {
        flex: 1;
        background: #f7f7fb;
        overflow-x: hidden;
    }
</style>
