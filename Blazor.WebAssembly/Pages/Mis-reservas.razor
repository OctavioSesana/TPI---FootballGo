@page "/mis-reservas"
@using DTOs
@using API.Clients
@using Blazor.WebAssembly.Shared
@inject IJSRuntime JS
@inject NavigationManager Nav

<VolverAtras />
<h3 class="mb-3">Mis Reservas</h3>

@if (isLoading)
{
    <p>Cargando...</p>
}
else if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (reservas is null || !reservas.Any())
{
    <div class="alert alert-info">No tenés reservas registradas.</div>
}
else
{
    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>N° Reserva</th>
                <th>N° Cancha</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Precio Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in reservas)
            {
                var puedeCancelar = PuedeCancelar(r);

                <tr>
                    <td>@r.IdReserva</td>
                    <td>@r.NroCancha</td>
                    <td>@r.FechaReserva.ToString("dd/MM/yyyy")</td>
                    <td>@r.HoraInicio</td>
                    <td>$@r.PrecioTotal</td>
                    <td>
                        @if (puedeCancelar)
                        {
                            <button class="btn btn-danger btn-sm"
                                    @onclick="() => CancelarReserva(r.IdReserva)">
                                Cancelar
                            </button>
                        }
                        else
                        {
                            <span class="text-muted small">No cancelable</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Reserva> reservas = new();
    private bool isLoading = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // ⚙️ Leemos el valor plano del localStorage
            var email = await JS.InvokeAsync<string>("localStorage.getItem", "clienteEmail");
            if (string.IsNullOrWhiteSpace(email))
            {
                Console.WriteLine("⚠️ No se encontró clienteEmail en localStorage");
                Nav.NavigateTo("/login");
                return;
            }

            // Elimina comillas extra si vienen del JSON.stringify
            email = email.Replace("\"", "");

            Console.WriteLine($"✅ ClienteEmail obtenido: {email}");

            var data = await ReservaApiClient.GetByClienteMailAsync(email);
            reservas = data.ToList();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    // 👇 Lógica para saber si se puede cancelar o no
    private bool PuedeCancelar(Reserva r)
    {
        // SUPONGO que HoraInicio es TimeSpan.
        // Si fuera string tipo "18:00", se puede adaptar a TimeSpan.Parse.
        DateTime inicio;

        if (r.HoraInicio is TimeSpan ts)
        {
            inicio = r.FechaReserva.Date + ts;
        }
        else
        {
            // fallback por si HoraInicio viene como string u otro tipo
            if (!TimeSpan.TryParse(r.HoraInicio.ToString(), out var tsParsed))
                return false;

            inicio = r.FechaReserva.Date + tsParsed;
        }

        // Solo se puede cancelar si todavía no llegó la hora de inicio
        return inicio > DateTime.Now;
    }

    private async Task CancelarReserva(int idReserva)
    {
        // Seguridad extra en el servidor de Blazor:
        var reserva = reservas.FirstOrDefault(x => x.IdReserva == idReserva);
        if (reserva is null)
        {
            error = "Reserva no encontrada.";
            return;
        }

        if (!PuedeCancelar(reserva))
        {
            error = "No podés cancelar una reserva que ya comenzó o ya pasó.";
            return;
        }

        bool confirm = await JS.InvokeAsync<bool>(
            "confirm",
            $"¿Seguro que querés cancelar la reserva #{idReserva}?"
        );

        if (!confirm)
            return;

        try
        {
            await ReservaApiClient.DeleteAsync(idReserva);

            reservas = reservas
                .Where(r => r.IdReserva != idReserva)
                .ToList();
        }
        catch (Exception ex)
        {
            error = $"Error al cancelar reserva: {ex.Message}";
        }
    }
}
